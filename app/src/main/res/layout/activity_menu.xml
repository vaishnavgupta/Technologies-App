<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_marginTop="60dp"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMenu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:id="@+id/CardAndroid"
        android:backgroundTint="@color/aqua"

        android:layout_width="150dp"
        android:layout_height="150dp">
        <TextView

        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android App Development" />


    </androidx.cardview.widget.CardView>
        <!--ADDING SPACER VIEW TO RIGHT ALIGN-->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:id="@+id/CardiOS"
        android:backgroundTint="@color/aqua"

        android:layout_width="150dp"
        android:layout_height="150dp">
        <TextView

            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iOS App Development" />
    </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            android:id="@+id/CardML"
            android:backgroundTint="@color/aqua"

            android:layout_width="150dp"
            android:layout_height="150dp">
            <TextView

                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Machine Learning" />


        </androidx.cardview.widget.CardView>
        <!--ADDING SPACER VIEW TO RIGHT ALIGN-->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            android:id="@+id/CardWebD"
            android:backgroundTint="@color/aqua"

            android:layout_width="150dp"
            android:layout_height="150dp">
            <TextView

                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web Development" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            android:id="@+id/CardBC"
            android:backgroundTint="@color/aqua"

            android:layout_width="150dp"
            android:layout_height="150dp">
            <TextView

                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BlockChain" />


        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <androidx.cardview.widget.CardView
            android:id="@+id/CardAI"
            android:layout_width="150dp"
            android:layout_height="150dp"

            android:backgroundTint="@color/aqua"
            app:cardCornerRadius="20dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="cursive"
                android:text="Artificial Intelligence"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/contact"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us" />
</LinearLayout>